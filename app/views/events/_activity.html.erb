<% male_leader_result = @first_male_by_activity_id[activity.id] %>
<% female_leader_result = @first_female_by_activity_id[activity.id] %>
<%= tag.tr class: activity_counter > 14 ? 'collapse multi-collapse' : 'not-collapse' do %>
  <td><%= @total_activities - activity_counter %></td>
  <td class="date" data-date="<%= activity.date %>"><%= link_to l(activity.date), activity %></td>
  <td class="results_count"><%= @results_count[activity] %></td>
  <td class="volunteers_count"><%= @volunteers_count.fetch(activity, 0) %></td>
  <td class="hidden-on-phone"><%= "#{male_leader_result.athlete.name} (#{male_leader_result.time_string})" if male_leader_result&.athlete %></td>
  <td class="hidden-on-phone"><%= "#{female_leader_result.athlete.name} (#{female_leader_result.time_string})" if female_leader_result&.athlete %></td>
<% end %>
