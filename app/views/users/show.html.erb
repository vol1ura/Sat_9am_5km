<% head_info :description, t('.description', user_name: current_user.full_name) %>
<div class="row justify-content-center">
  <div style="max-width: 400px;">
    <h2 class="mb-4"><%= head_info :title, t('.title') %></h2>
    <%= turbo_frame_tag current_user do %>
      <div class="card shadow mb-4">
        <div class="card-body">
          <div class="d-flex">
            <div class="flex-grow-1 me-2">
              <div class="d-flex flex-column">
                <p class="fs-3 mb-2"><%= current_user.first_name %></p>
                <p class="fs-3"><%= current_user.last_name %></p>
              </div>
            </div>
            <div class="flex-shrink-0">
              <%= image_tag user_image_path(current_user), class: 'avatar rounded-circle' %>
            </div>
          </div>

          <div class="d-flex flex-column mt-3">
            <p class="mb-2">
              <i class="fa-solid fa-envelope text-secondary me-2"></i>
              <%= current_user.email %>
            </p>
            <p class="mb-2">
              <i class="fa-solid fa-phone text-secondary me-2"></i>
              <%= current_user.phone || t('.not_specified') %>
            </p>
            <p class="mb-2">
              <i class="fa-solid fa-people-group text-secondary me-2"></i>
              <%= current_user&.athlete&.club&.name || t('.not_specified') %>
            </p>
            <p class="mb-2">
              <i class="fa-solid fa-house text-secondary me-2"></i>
              <%= current_user&.athlete&.event&.name || t('.not_specified') %>
            </p>
          </div>
        </div>
      </div>

      <div class="d-flex justify-content-start my-4">
        <%= link_to edit_user_path, class: 'btn btn-outline-primary me-2', title: t('.edit') do %>
          <i class="fa-solid fa-pen-to-square me-1"></i> <%= t '.edit' %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
