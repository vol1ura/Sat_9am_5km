<%= form_with url: admin_utilities_export_milestones_csv_path, id: 'milestones_csv_form', local: true do |f| %>
  <div style="margin-bottom: 12px">
    <%= f.label :event_id, 'Мероприятие' %>
    <%= f.collection_select :event_id, Event.accessible_by(current_ability).order(:visible_order, :name), :id, :name, include_blank: true %>
  </div>
  <div style="margin-bottom: 12px; display: flex; align-items: center; gap: 6px;">
    <%= f.check_box :download_now, id: 'download_now_milestones', checked: false %>
    <label for="download_now_milestones" style="margin: 0; cursor: pointer; display: flex; align-items: center; gap: 6px;">
      Скачать в браузере
      <small style="color: #666;">(по умолчанию в телеграм)</small>
    </label>
  </div>
  <div style="text-align: left; margin-top: 16px;">
    <button type="button" class="button" onclick="document.getElementById('milestones_csv_form').submit()">Скачать</button>
  </div>
<% end %>
