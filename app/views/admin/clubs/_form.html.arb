# frozen_string_literal: true

active_admin_form_for [:admin, resource] do |f|
  f.semantic_errors(*f.object.errors.attribute_names)

  f.inputs do
    input :country
    input :name
    input(
      :description,
      as: :quill_editor,
      input_html: {
        data: {
          options: {
            modules: {
              toolbar: [
                %w[bold italic strike],
                %w[blockquote code-block],
                [{ list: 'ordered' }, { list: 'bullet' }],
                ['link'],
                ['clean'],
              ],
            },
            placeholder: 'Какой же классный клуб...',
            theme: 'snow',
          },
        },
      },
    )
    input(
      :logo,
      as: :file,
      input_html: { accept: 'image/jpeg,image/png' },
      hint:
        if f.object.persisted? && f.object.logo.attached?
          image_tag f.object.logo.variant(:thumb), class: 'img-hint'
        else
          'Поддерживаются файлы JPEG и PNG, размер до 250 КБ, разрешением до 900px (по ширине или высоте)'
        end,
    )
  end

  f.actions
end
