<% @athletes.each_with_index do |athlete, index| %>
  <tr>
    <td><%= (@page - 1) * RatingsController::PER_PAGE + index + 1 %></td>
    <td><%= link_to athlete.name, athlete, class: 'athlete-link', data: { turbo: false } %></td>
    <td><%= athlete.stats.dig(@rating_type, @order) || 0 %></td>
    <td class="hidden-on-phone"><%= link_to athlete.club.name, athlete.club, data: { turbo: false } if athlete.club %></td>
  </tr>
<% end %>

<% if @athletes.size >= RatingsController::PER_PAGE %>
  <tr class="loading-indicator">
    <td colspan="4" class="text-center p-3">
      <%= render 'loading' %>
    </td>
  </tr>
<% end %>
