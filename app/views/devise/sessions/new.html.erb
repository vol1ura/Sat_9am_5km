<% head_info :description, t('.description') %>
<h2><%= head_info :title, t('.title') %></h2>

<div class="row">
  <div class="col-sm-6">
    <%= form_for resource, as: resource_name, url: session_path(resource_name), data: { turbo: false } do |f| %>
      <div class="row mb-2">
        <%= f.label :email, class: 'col-sm-4 col-form-label' %>
        <div class="col-sm-8 col-md-6">
          <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: :email, inputmode: :email %>
        </div>
      </div>
      <div class="row mb-3">
        <%= f.label :password, class: 'col-sm-4 col-form-label' %>
        <div class="col-sm-8 col-md-6">
          <%= f.password_field :password, class: 'form-control', autocomplete: 'current-password' %>
        </div>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="row mb-3">
          <div class="col-sm-8 offset-sm-4">
            <div class="form-check">
              <%= f.check_box :remember_me, class: 'form-check-input' %>
              <%= f.label :remember_me, class: 'form-check-label' %>
            </div>
          </div>
        </div>
      <% end %>
      <%= f.submit t('.submit'), class: 'btn btn-primary mb-3' %>
    <% end %>
    <div class="alert alert-info mt-4" role="alert">
      <i class="fa-solid fa-robot"></i>
      <%= t '.telegram_login_html', link: 'https://t.me/sat9am5kmbot' %>
    </div>
  </div>
  <div class="col-sm-6">
    <%= render 'devise/shared/links' %>
  </div>
</div>
