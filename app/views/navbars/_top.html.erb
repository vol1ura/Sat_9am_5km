            <%= f.text_field :q, type: 'search', class: 'form-control', placeholder: t('.name_or_id'), 'aria-label' => 'Search', autocomplete: 'off' %>
            <%= f.submit t('.search'), class: 'btn btn-outline-light' %>
          </div>
        <% end %>
      </div>
