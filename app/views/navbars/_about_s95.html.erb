<li class="nav-item dropdown" data-controller="dropdown">
  <% about_s95_pages = %w[rules about support feedback joining] %>
  <%=
    button_tag(
      type: 'button',
      class: "nav-link dropdown-toggle #{'active' if params[:controller] == 'pages' && about_s95_pages.include?(params[:page])}",
      'data-bs-toggle' => 'dropdown',
      'aria-expanded' => 'false',
      'data-dropdown-target' => 'toggle',
    ) do
  %>
    <% if with_icon %>
      <span class="fa-li"><i class="fa-solid fa-circle-info"></i></span>
    <% end %>
    <%= t('.title') %>
  <% end %>
  <ul class="dropdown-menu" data-dropdown-target="menu">
    <% about_s95_pages.each do |page| %>
      <li><%= link_to t(".#{page}"), page_path(page:), class: "dropdown-item #{'active' if params[:page] == page}" %></li>
    <% end %>
    <li><%= link_to t('.articles'), articles_path, class: "dropdown-item #{'active' if params[:controller] == 'articles'}" %></li>
  </ul>
</li>
