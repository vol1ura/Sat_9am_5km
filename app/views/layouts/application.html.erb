      <!-- /Yandex.Metrika counter -->
    <% end %>
  </head>
  <body class="m-0 d-flex flex-column">
    <%= render 'navbars/top' %>
    <div class="container">
      <%= yield %>
    </div>
    <div class="spacer"></div>
    <%= render 'navbars/bottom' %>
  </body>
</html>
