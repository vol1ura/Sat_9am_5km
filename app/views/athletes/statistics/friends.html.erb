<%= turbo_frame_tag 'friends_list' do %>
  <% if @athlete.friends.any? %>
    <div class="list-group list-group-flush" id="friends">
      <%=
        render(
          partial: 'friendships/friend',
          collection: @athlete.friends.includes(:going_to_event, user: { image_attachment: :blob }).order(:name),
          locals: { is_friends_tab: true },
        )
      %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <i class="fa-solid fa-user-group text-muted display-1"></i>
      <h3 class="mt-3 text-muted"><%= t('.no_friends') %></h3>
      <p class="text-muted"><%= t('.no_friends_description') %></p>
    </div>
  <% end %>
<% end %>
