<%
  activity_date = result.date
  event = result.activity.event
  total_time = result.total_time
%>
<tr class="result">
  <td><%= @total_results - result_counter %></td>
  <td class="event-date" timestamp="<%= activity_date.to_datetime.to_i * 1000 %>">
    <%= link_to l(activity_date), result.activity %>
  </td>
  <td class="total-time" min="<%= time_to_sec(total_time) %>"><%= human_result_time(total_time) %></td>
  <td class="hidden-on-phone"><%= human_result_pace(total_time) %></td>
  <td class="hidden-on-phone"><%= result.position %></td>
  <td class="event-name"><%= link_to event.name, event_path(event.code_name) %></td>
</tr>
