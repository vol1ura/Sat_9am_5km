<%# Hero Section %>
<section class="hero-section py-5 text-white mt-n3">
  <img src="/images/hero-bg.webp" alt="" class="hero-bg-image">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
      </div>
      <div class="col-lg-6">
        <div class="placeholder-image">
          <h1 class="display-4 fw-bold mb-4 text-white"><%= t '.hero_title' %></h1>
          <p class="lead mb-4"><%= t '.hero_subtitle' %></p>
          <div class="d-flex flex-wrap gap-3">
            <% if current_user&.athlete %>
              <%= link_to t('.my_profile'), athlete_path(current_user.athlete), class: 'btn btn-danger btn-lg' %>
            <% else %>
              <%= link_to t('.registration'), new_user_session_path, class: 'btn btn-danger btn-lg' %>
            <% end %>
            <%= link_to t('.results'), activities_path, class: 'btn btn-outline-light btn-lg' %>
            <%= link_to t('.find_run'), events_path, class: 'btn btn-outline-light btn-lg' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%# How It Works Section %>
<section class="how-it-works py-5" style="background-color: #f8f9fa;">
  <div class="container">
    <h2 class="text-center mb-5"><%= t '.how_it_works.title' %></h2>
    <div class="row g-4">
      <div class="col-md-3">
        <div class="card h-100 border-0 shadow-sm position-relative">
          <div class="card-body text-center">
            <i class="fas fa-user-plus fa-3x mb-3 text-primary"></i>
            <h5 class="card-title">
              <%= link_to t('.how_it_works.registration.title'), new_user_session_path, class: 'text-decoration-none stretched-link text-reset' %>
            </h5>
            <p class="card-text"><%= t '.how_it_works.registration.description' %></p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card h-100 border-0 shadow-sm position-relative">
          <div class="card-body text-center">
            <i class="fas fa-map-marker-alt fa-3x mb-3 text-primary"></i>
            <h5 class="card-title">
              <%= link_to t('.how_it_works.choose_run.title'), events_path, class: 'text-decoration-none stretched-link text-reset' %>
            </h5>
            <p class="card-text"><%= t '.how_it_works.choose_run.description' %></p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card h-100 border-0 shadow-sm position-relative">
          <div class="card-body text-center">
            <i class="fas fa-calendar-check fa-3x mb-3 text-primary"></i>
            <h5 class="card-title">
              <%= link_to t('.how_it_works.come_saturday.title'), page_path(page: 'rules'), class: 'text-decoration-none stretched-link text-reset' %>
            </h5>
            <p class="card-text"><%= t '.how_it_works.come_saturday.description' %></p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card h-100 border-0 shadow-sm position-relative">
          <div class="card-body text-center">
            <i class="fas fa-chart-line fa-3x mb-3 text-primary"></i>
            <h5 class="card-title">
              <%= link_to t('.how_it_works.track_progress.title'), ratings_path, class: 'text-decoration-none stretched-link text-reset' %>
            </h5>
            <p class="card-text"><%= t '.how_it_works.track_progress.description' %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%# Countdown Timer Section %>
<section class="countdown-section py-4" style="background-color: #2c3e50;" data-controller="countdown">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 text-center text-white">
        <h3 class="mb-3"><%= t '.countdown.title' %></h3>
        <div class="countdown-timer d-flex justify-content-center gap-1 gap-md-4">
          <div class="timer-item">
            <span class="timer-number" data-countdown-target="days">00</span>
            <span class="timer-label"><%= t '.countdown.days' %></span>
          </div>
          <div class="timer-item">
            <span class="timer-number" data-countdown-target="hours">00</span>
            <span class="timer-label"><%= t '.countdown.hours' %></span>
          </div>
          <div class="timer-item">
            <span class="timer-number" data-countdown-target="minutes">00</span>
            <span class="timer-label"><%= t '.countdown.minutes' %></span>
          </div>
          <div class="timer-item">
            <span class="timer-number" data-countdown-target="seconds">00</span>
            <span class="timer-label"><%= t '.countdown.seconds' %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

