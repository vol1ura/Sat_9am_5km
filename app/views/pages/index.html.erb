$primary: #2a2951;
$secondary: #a0a0a0;
$success: #198754;
$danger: #d63384;
$warning: #fecba1;
$info: #009dac;
$light: #f0f0f0;
$dark: #0f0f0f;

$enable-negative-margins: true;

@import "bootstrap";
@import "font-awesome";

@mixin media($query) {
  @if $query == phoneScreen {
    @media (max-width: 768px) {
      @content;
    }
  }
}

body {
  min-height: 100vh;
  font-family: 'Inter', sans-serif;
}

.spacer {
  flex: 1 0 auto;
}

.bd-footer {
  a {
    text-decoration: none;
  }

  .footer-text a:hover {
    text-decoration: underline;
    color: inherit;
  }

  .social-links {
    display: flex;
    gap: 8px;

    a:hover {
      opacity: 0.85;
    }

    i {
      font-size: 2em;
      @include media(phoneScreen) {
        font-size: 1.6em;
      }
    }
  }

  @include media(phoneScreen) {
    .social-links {
      order: 2;
    }
    .footer-text {
      order: 3;
    }
  }
}

h1,
h2,
h3,
h4,
h5,
h6 {
  color: $primary;
  margin-top: 0.5rem;
}

.card-title-link {
  text-decoration: none;
}

.table.table-centered {
  th,
  tr {
    @extend .text-center;
  }
}

@include media(phoneScreen) {
  .hidden-on-phone {
    display: none;
  }
}

@media (max-width: 415px) {
  .cropped-on-phone {
    display: inline-block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 60px;
  }
}

.sort-arrow {
  cursor: pointer;
  color: $secondary;
  i.fa:hover {
    color: $primary;
  }
}

nav.pagination {
  span {
    border-width: 1px 0 1px 1px;
    border-style: solid;
    border-color: $secondary;
    padding: 4px 8px;
    @extend .position-relative;
  }
  a {
    text-decoration: none;
    @extend .stretched-link;
  }
  span:hover {
    background-color: $light;
  }
  .current {
    background-color: $light;
  }
  span:first-child {
    border-radius: 5px 0 0 5px;
  }
  span:last-child {
    border-radius: 0 5px 5px 0;
    border-width: 1px;
  }
}

.fa-stack.contact {
  font-size: 30px;
  @include media(phoneScreen) {
    font-size: 25px;
  }
  :hover {
    opacity: 0.85;
  }
}

.img-club {
  @extend .float-start, .me-2, .my-2, .rounded;
  width: 150px;
}

.card-with-border {
  @extend .card, .text-bg-light, .bg-opacity-50, .border-primary, .border-opacity-25, .h-100;
  box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
  transition: box-shadow 0.3s ease-in-out;

  .img-scaled {
    transition: transform 0.3s ease;
  }

  &:hover {
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);

    .img-scaled {
      transform: scale(1.03);
    }
  }

  .card-body a:not(.stretched-link) {
    position: relative;
    z-index: 2;
  }
}

.fs-small {
  font-size: 0.85em;

  &-sm {
    font-size: var(--bs-body-font-size);

    @include media(phoneScreen) {
      font-size: 0.85em;
    }
  }
}

@keyframes blink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0.3; }
}

.hero-section {
  position: relative;
  overflow: hidden;

  .hero-bg-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -2;
  }

  &::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
    z-index: -1;
  }

  .container {
    position: relative;
    z-index: 1;
  }
}

.story-card {
  padding: 1.5rem;
  background-color: #f8f9fa;
  border-radius: 0.5rem;
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  object-fit: cover;
}

.events-section {
  .thumb-badge {
    width: 60px;
    height: 60px;
    object-fit: contain;
    border-radius: 0.25rem;
  }

  .text-badge {
    width: 60px;
    height: 60px;
    background-color: $light;
    border: 1px solid #dee2e6;
    border-radius: 0.25rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    font-size: 0.8rem;
    line-height: 1.2;
  }
}

.volunteer-app-section {
  .app-screen-container {
    max-width: 300px;
    margin: auto;
  }

  .app-screen {
    border-radius: 1.25rem;
    box-shadow: 0 0.5rem 1rem rgba($dark, 0.15);
  }

  .app-feature-item {
    cursor: pointer;
    padding: 1rem;
    border-radius: 0.5rem;
    transition: background-color 0.2s ease-in-out;

    &:hover {
      background-color: $light;
    }

    &.feature-active {
      background-color: #e9ecef;
    }
  }

  .app-button {
    height: 40px;
    @include media(phoneScreen) {
      height: 35px;
    }
  }
}

.partners-section {
  padding: 3rem 0;
  background-color: #f8f9fa;

  .partners {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 3rem 2.5rem;
  }

  .img-partner {
    max-height: 45px;
    max-width: 150px;
    object-fit: contain;
    filter: grayscale(100%);
    opacity: 0.7;
    transition: all 0.3s ease;

    &:hover {
      filter: grayscale(0%);
      opacity: 1;
      transform: scale(1.05);
    }
  }
}

@import "web/index";
