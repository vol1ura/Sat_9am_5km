<%# Stories Section %>
<section class="stories-section py-5">
  <div class="container">
    <h2 class="text-center mb-5"><%= t '.stories.title' %></h2>
    <div id="storiesCarousel" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#storiesCarousel" data-bs-slide-to="0" class="active" aria-label="To first slide"></button>
        <button type="button" data-bs-target="#storiesCarousel" data-bs-slide-to="1" aria-label="To second slide"></button>
        <button type="button" data-bs-target="#storiesCarousel" data-bs-slide-to="2" aria-label="To last slide"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <div class="row justify-content-center">
            <div class="col-md-8">
              <div class="story-card text-center mb-3">
                <div class="story-image mb-4">
                  <%#= image_tag '/images/stories/runner1.jpg', class: 'rounded-circle', alt: 'Участник S95', style: 'width: 150px; height: 150px; object-fit: cover;' %>
                </div>
                <blockquote class="blockquote">
                  <p class="mb-4"><%= t '.stories.story1.quote' %></p>
                  <footer class="blockquote-footer"><%= t '.stories.story1.author' %></footer>
                </blockquote>
              </div>
            </div>
          </div>
        </div>
        <div class="carousel-item">
          <div class="row justify-content-center">
            <div class="col-md-8">
              <div class="story-card text-center mb-3">
                <div class="story-image mb-4">
                  <%#= image_tag '/images/stories/runner2.jpg', class: 'rounded-circle', alt: 'Участник S95', style: 'width: 150px; height: 150px; object-fit: cover;' %>
                </div>
                <blockquote class="blockquote">
                  <p class="mb-4"><%= t '.stories.story2.quote' %></p>
                  <footer class="blockquote-footer"><%= t '.stories.story2.author' %></footer>
                </blockquote>
              </div>
            </div>
          </div>
        </div>
        <div class="carousel-item">
          <div class="row justify-content-center">
            <div class="col-md-8">
              <div class="story-card text-center mb-3">
                <div class="story-image mb-4">
                  <%#= image_tag '/images/stories/runner3.jpg', class: 'rounded-circle', alt: 'Участник S95', style: 'width: 150px; height: 150px; object-fit: cover;' %>
                </div>
                <blockquote class="blockquote">
                  <p class="mb-4"><%= t '.stories.story3.quote' %></p>
                  <footer class="blockquote-footer"><%= t '.stories.story3.author' %></footer>
                </blockquote>
              </div>
            </div>
          </div>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#storiesCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
        <span class="visually-hidden"><%= t '.stories.previous' %></span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#storiesCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
        <span class="visually-hidden"><%= t '.stories.next' %></span>
      </button>
    </div>
  </div>
</section>

<%# Events Section %>
<% if @jubilee_events.present? || @funrun_badges.present? %>
  <section class="events-section">
    <div class="container">
      <h2 class="text-center"><%= t '.upcoming_events', date: l(@next_saturday, format: :brief) %></h2>
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <ul class="list-group list-group-flush">
            <% @jubilee_events.each do |event, activity_number| %>
              <li class="list-group-item">
                <div class="d-flex align-items-center">
                  <div class="flex-shrink-0">
                    <div class="text-badge px-3 py-4">
                      <div class="fw-normal text-capitalize"><%= t 'activerecord.models.activity.one' %></div>
                      <div class="fw-bold fst-italic">№<%= activity_number %></div>
                    </div>
                  </div>
                  <div class="flex-grow-1 ms-3">
                    <%= link_to event.name, event_path(event.code_name), class: 'text-decoration-none fw-bold text-dark' %>
                  </div>
                </div>
              </li>
            <% end %>
            <% @funrun_badges.each do |badge| %>
              <li class="list-group-item">
                <div class="d-flex align-items-center">
                  <div class="flex-shrink-0">
                    <%= image_tag badge.image.variant(:thumb), class: 'thumb-badge', alt: 'FunRun badge' %>
                  </div>
                  <div class="flex-grow-1 ms-3">
                    <%= link_to badge.name, badge, class: 'text-decoration-none fw-bold text-dark' %>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </section>
<% end %>

