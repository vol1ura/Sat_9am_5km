<h1><%= head_info :title, t('navbars.about_s95.feedback') %></h1>
<p><%= head_info :description, t('.description') %></p>
<div class="card mb-4">
  <div class="card-body">
    <%= form_with url: submit_feedback_pages_path, local: true do |form| %>
      <%= form.text_area :message, class: 'mb-3 form-control', placeholder: t('.placeholder'), maxlength: PagesController::MAX_FEEDBACK_SIZE, rows: 7, required: true %>

      <div class="contact d-none required">
        <%= form.text_field :contact, autocomplete: 'off' %>
      </div>

      <%= form.submit t('.submit'), class: 'btn btn-primary', data: { turbo_confirm: t('.confirm') } %>
    <% end %>
  </div>
</div>
<p><%= t '.other_contacts_html', our_email: ENV.fetch('INFO_EMAIL') %></p>
