<% head_info :og_image, '/images/novi-sad-100.webp' %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-8 col-xl-6">
      <h1 class="text-center mb-4">S95 – 100. trka u Novom Sadu!</h1>

      <div class="mb-4">
        <%= image_tag "/images/novi-sad-100.webp", alt: "S95 Novi Sad", class: "img-fluid rounded shadow" %>
